<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/popularEventCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_rounded_container"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popularEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_events_title"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/popularEventImage"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/baseline_image_24"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#0"
                    android:id="@+id/popularEventPlacingText"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="30dp"></TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:src="@drawable/baseline_heart_24_opposite"></ImageView>

                <TextView
                    android:id="@+id/interestedAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold"></TextView>



            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>